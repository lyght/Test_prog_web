<% provide(:title, 'Show All') %>

<body>
  <h1>Articles</h1>
  <% @post.each.with_index do |post, index| %>
  <table class="table-bordered table-responsive text-centered">
      <tr>
      <td style="font-weight: bold; text-transform: uppercase"><%= post.title %></td>
      </tr>
      <tr>
      <td style="text-transform: capitalize"><%= post.content %></td>
      </tr>
      <tr>
      <td style="text-transform: capitalize"> <%= post.author%></td>
      </tr>
      <tr>
      <td> <%= image_tag post.image.url %></td>
      </tr>
      <%= link_to 'Show ', post_path(index+1) %>

      <%= link_to 'Edit ',edit_post_path(post) %>

      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </table>
  <br>
  <% end %>
</body>
